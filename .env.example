# Application settings
APP_NAME="Fastapi Base Service"
APP_VERSION="0.1.0"
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000

# External service URLs
EXTERNAL_SERVICE_A_URL=https://api.service-a.example.com
EXTERNAL_SERVICE_B_URL=https://api.service-b.example.com

# HTTP client settings
HTTP_TIMEOUT=30.0
HTTP_RETRIES=3

# Logging settings
LOG_LEVEL=INFO

# ELK Stack settings
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=fastapi-logs

# OpenTelemetry settings
OTEL_SERVICE_NAME=fastapi-base-service
OTEL_SERVICE_VERSION=0.1.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_RESOURCE_ATTRIBUTES=service.namespace=microservices,deployment.environment=development
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_LOGGING=true
